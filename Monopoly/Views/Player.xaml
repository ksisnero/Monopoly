<UserControl x:Class="Monopoly.Views.Player"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm" xmlns:ViewModels="clr-namespace:Monopoly.ViewModels"
             mc:Ignorable="d"
             DataContext="{dxmvvm:ViewModelSource Type=ViewModels:PlayerViewModel}"
             d:DesignHeight="900" d:DesignWidth="400" BorderBrush="#FFC3C2C2" Foreground="{x:Null}">
    <Grid>
        <StackPanel>
            <Rectangle Height="100" Stroke="#FFC3C2C2" VerticalAlignment="Top" Width="390" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            <TextBlock x:Name="Money" TextWrapping="Wrap" Text="TextBlock"/>

        </StackPanel>
    </Grid>
</UserControl>
